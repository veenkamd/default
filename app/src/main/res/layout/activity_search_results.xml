<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2889ff"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_button_collections"
        android:id="@+id/buttonGoToResultDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff5ff4ff"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:clickable="true" />

    <EditText android:id="@+id/title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffffff"
        android:layout_marginTop="12dp"
        android:hint="@string/title_text" />

    <EditText android:id="@+id/author_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffffff"
        android:layout_marginTop="12dp"
        android:hint="@string/author_text" />

    <EditText android:id="@+id/genre_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffffff"
        android:layout_marginTop="12dp"
        android:hint="@string/genre_text" />

    <EditText android:id="@+id/isbn_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffffff"
        android:layout_marginTop="12dp"
        android:hint="@string/isbn_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send" />
</LinearLayout>